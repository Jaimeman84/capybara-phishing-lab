<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Email Inbox - PhishingLab</h1>
    <%= link_to 'Admin Dashboard', admin_dashboard_path, class: 'bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700' %>
  </div>

  <% if @emails.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-4 py-3 text-left">From</th>
            <th class="px-4 py-3 text-left">Subject</th>
            <th class="px-4 py-3 text-left">Date</th>
            <th class="px-4 py-3 text-left">Status</th>
            <th class="px-4 py-3 text-left">Risk</th>
          </tr>
        </thead>
        <tbody>
          <% @emails.each do |email| %>
            <tr class="border-t hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= email_path(email) %>'">
              <td class="px-4 py-3">
                <div class="font-medium"><%= email.sender_name %></div>
                <div class="text-sm text-gray-600"><%= email.sender_email %></div>
              </td>
              <td class="px-4 py-3"><%= truncate(email.subject, length: 60) %></td>
              <td class="px-4 py-3 text-sm"><%= email.received_at.strftime('%b %d, %H:%M') %></td>
              <td class="px-4 py-3">
                <% if email.reported? %>
                  <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Reported</span>
                <% end %>
              </td>
              <td class="px-4 py-3">
                <% if email.threat_score %>
                  <% risk = email.threat_score.risk_level %>
                  <span class="px-2 py-1 text-xs rounded <%= risk == 'low' ? 'bg-green-100 text-green-800' : risk == 'medium' ? 'bg-yellow-100 text-yellow-800' : risk == 'high' ? 'bg-orange-100 text-orange-800' : 'bg-red-100 text-red-800' %>">
                    <%= risk.titleize %> (<%= email.threat_score.score %>)
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12 text-gray-500">
      No emails found. Run: rails db:seed
    </div>
  <% end %>
</div>
