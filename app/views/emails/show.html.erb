<div class="container mx-auto px-4">
  <!-- Back Button -->
  <%= link_to emails_path, class: 'inline-flex items-center text-white hover:text-purple-100 mb-6 transition font-medium' do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to Inbox
  <% end %>

  <!-- Email Card -->
  <div class="bg-white shadow-2xl rounded-2xl overflow-hidden">
    <!-- Header Section with Gradient -->
    <div class="bg-gradient-to-r from-purple-600 to-blue-500 p-6 text-white">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <h1 class="text-3xl font-bold mb-4"><%= @email.subject %></h1>

          <!-- Sender Info -->
          <div class="flex items-center space-x-4 mb-3">
            <div class="flex-shrink-0 h-12 w-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center text-white font-bold text-lg">
              <%= @email.sender_name.first.upcase %>
            </div>
            <div>
              <div class="font-semibold text-lg"><%= @email.sender_name %></div>
              <div class="text-purple-100 text-sm"><%= @email.sender_email %></div>
            </div>
          </div>

          <!-- Meta Info -->
          <div class="flex items-center space-x-6 text-sm text-purple-100">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              To: <%= @email.recipient_email %>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <%= @email.received_at.strftime('%B %d, %Y at %H:%M') %>
            </div>
          </div>
        </div>

        <!-- Status Badge -->
        <% if @email.reported? %>
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-white bg-opacity-20 text-white border border-white border-opacity-30">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Reported
          </span>
        <% end %>
      </div>
    </div>

    <!-- Email Body -->
    <div class="p-8">
      <div class="mb-8">
        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Message Content
        </h3>
        <div class="bg-gray-50 p-6 rounded-xl border-2 border-gray-100">
          <%= simple_format(@email.body_plain, {}, class: 'text-gray-700 leading-relaxed') %>
        </div>
      </div>

      <!-- Report Button -->
      <% unless @email.reported? %>
        <div class="mb-8">
          <%= button_to reports_path(email_id: @email.id), method: :post, class: 'w-full bg-gradient-to-r from-red-600 to-red-700 text-white px-8 py-4 rounded-xl font-bold text-lg hover:shadow-2xl transition transform hover:-translate-y-1 flex items-center justify-center' do %>
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            Report as Phishing
          <% end %>
        </div>
      <% end %>

      <!-- Analysis Results -->
      <% if @email.threat_score %>
        <div class="border-t-4 border-purple-500 pt-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <svg class="w-7 h-7 mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            Security Analysis
          </h2>

          <!-- Threat Score Card -->
          <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6 mb-6 border border-gray-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 text-sm font-medium mb-1">Threat Score</p>
                <p class="text-5xl font-bold text-gray-800"><%= @email.threat_score.score %><span class="text-2xl text-gray-500">/100</span></p>
              </div>
              <div>
                <% risk = @email.threat_score.risk_level %>
                <% badge_class = case risk
                  when 'low' then 'bg-green-100 text-green-800 border-2 border-green-300'
                  when 'medium' then 'bg-yellow-100 text-yellow-800 border-2 border-yellow-300'
                  when 'high' then 'bg-orange-100 text-orange-800 border-2 border-orange-300'
                  when 'critical' then 'bg-red-100 text-red-800 border-2 border-red-300 animate-pulse'
                  end %>
                <span class="inline-flex items-center px-6 py-3 rounded-xl text-lg font-bold <%= badge_class %>">
                  <% if risk == 'critical' %>
                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                  <%= risk.titleize %> Risk
                </span>
              </div>
            </div>
          </div>

          <!-- Indicators Section -->
          <% if @email.phishing_indicators.any? %>
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
              Detected Indicators (<%= @email.phishing_indicators.count %>)
            </h3>
            <div class="space-y-4">
              <% @email.phishing_indicators.group_by(&:indicator_type).each do |type, indicators| %>
                <div class="bg-white border-2 border-gray-200 rounded-xl p-5 hover-lift">
                  <h4 class="font-bold text-gray-800 capitalize mb-3 flex items-center text-base">
                    <span class="w-2 h-2 bg-purple-600 rounded-full mr-2"></span>
                    <%= type %> Indicators
                  </h4>
                  <ul class="space-y-2">
                    <% indicators.each do |indicator| %>
                      <li class="flex items-start">
                        <% severity_class = case indicator.severity
                          when 'low' then 'bg-green-100 text-green-800 border border-green-300'
                          when 'medium' then 'bg-yellow-100 text-yellow-800 border border-yellow-300'
                          when 'high' then 'bg-orange-100 text-orange-800 border border-orange-300'
                          when 'critical' then 'bg-red-100 text-red-800 border border-red-300'
                          end %>
                        <span class="inline-flex items-center px-2.5 py-1 text-xs font-bold rounded-lg <%= severity_class %> mr-3 mt-0.5 flex-shrink-0">
                          <%= indicator.severity.upcase %>
                        </span>
                        <span class="text-gray-700 leading-relaxed"><%= indicator.description %></span>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="bg-green-50 border-2 border-green-200 rounded-xl p-6 flex items-center">
              <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-semibold text-green-800 text-lg">No Threats Detected</p>
                <p class="text-green-700 text-sm">This email appears to be legitimate with no phishing indicators found.</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
